<p id="notice"><%= notice %></p>

<h1>Bands</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Members</th>
      <th>Debut</th>
      <th>Band sort</th>
      <th>Concerts</th>
      <th>Total Attendance</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @bands.each do |band| %>
      <tr>
        <td><%= band.name %></td>
        <td><%= band.members %></td>
        <td><%= band.debut %></td>
        <td><%= band.band_sort %></td>
        <td><%= band.concerts.count %></td>
        <td><%= band.concerts.pluck(:attendance).max %></td> 
        <td><%= link_to 'Name Member', band_crews_path(band)  %></td> 
        <td><%= link_to 'Show', band %></td>
        <td><%= link_to 'Edit', edit_band_path(band) %></td>
        <td><%= link_to 'Destroy', band, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p id="notice"><%= notice %></p>

<h1>Crews</h1>

<table>
  <thead>
    <tr>
      <th>Member</th>
      <th>Band</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crews.each do |crew| %>
      <tr>
        <td><%= crew.members_name %></td>
        <td><%= crew.band %></td>
        <td><%= link_to 'Show', band_crew_path(@band, crew) %></td>
        <td><%= link_to 'Edit', edit_band_crew_path(@band, crew) %></td>
        <td><%= link_to 'Destroy', band_crew_path(@band, crew), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Crew', new_band_crew_path %>
<%= link_to 'Bands', band_path(@band) %>
